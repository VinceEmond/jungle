<section class="admin-products-new">

  <header class="page-header">
    <h1>User Registration</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

      <%= form_for :user, url: '/users' do |form| %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, :required => 'required', autofocus: true %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, :required => 'required'%>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, :required => 'required'%>
        </div>

        <div class="form-group">
          <%= form.label :'password confirmation' %>
          <%= form.password_field :password_confirmation, :required => 'required' %>
        </div>
        
        <%= form.submit "Submit", class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>
</section>